{// ! important ! => every change made here might be nedded in the tsconfig.spec.json as well
    "compilerOptions": {
      "rootDir": "src",
      "target": "es5",
      "module": "commonjs",
      "outDir": "out",
      "sourceMap": true,
      "resolveJsonModule": true,//needed for this repo
      "esModuleInterop": true,//needed for this repo
      "strict": true //needed for this repo
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ]
}